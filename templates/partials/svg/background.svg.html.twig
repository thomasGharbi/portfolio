<svg viewBox="0 0 100 100" class="absolute inset-0 w-full h-full" preserveAspectRatio="xMidYMid slice">
    <defs>
        <radialGradient id="Gradient1" cx="50%" cy="50%" r="0.5">
            <stop offset="0%" stop-color="var(--gradient-start)" />
            <stop offset="100%" stop-color="var(--gradient-end)" />
        </radialGradient>
        <radialGradient id="Gradient2" cx="50%" cy="50%" r="0.5">
            <stop offset="0%" stop-color="var(--gradient-start-second)" />
            <stop offset="100%" stop-color="var(--gradient-end-second)" />
        </radialGradient>
    </defs>

    <rect x="13.7%" y="1.2%" width="100%" height="100%" fill="url(#Gradient1)" transform="rotate(335 50 50)">
        <animate attributeName="x" dur="20s" values="13.7%;0%;13.7%" repeatCount="indefinite"/>
        <animate attributeName="y" dur="21s" values="1.2%;25%;1.2%" repeatCount="indefinite"/>
        <animateTransform attributeName="transform" type="rotate" from="0 50 50" to="360 50 50" dur="7s" repeatCount="indefinite"/>
    </rect>
    <rect x="-2.2%" y="35.4%" width="100%" height="100%" fill="url(#Gradient2)" transform="rotate(250 50 50)">
        <animate attributeName="x" dur="23s" values="-2.2%;0%;-2.2%" repeatCount="indefinite"/>
        <animate attributeName="y" dur="24s" values="35.4%;50%;35.4%" repeatCount="indefinite"/>
        <animateTransform attributeName="transform" type="rotate" from="0 50 50" to="360 50 50" dur="12s" repeatCount="indefinite"/>
    </rect>
</svg>
